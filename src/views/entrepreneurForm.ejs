<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Registrar Emprendimiento | Mis Vecinos</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet">
  <style>
    :root {
      --primary: #6d28d9;
      --primary-dark: #5b21b6;
      --primary-light: rgba(109, 40, 217, 0.1);
      --text: #1f2937;
      --text-light: #6b7280;
      --bg: #f9fafb;
      --bg-card: #ffffff;
      --border: #e5e7eb;
      --error: #dc2626;
      --font-main: 'Inter', sans-serif;
      --font-heading: 'DM Serif Text', serif;
      --space-sm: 0.8rem;
      --space-md: 1.2rem;
      --space-lg: 2rem;
      --space-xl: 3rem;
      --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      --transition: all 0.25s ease;
      --radius-sm: 6px;
      --radius-md: 8px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-main);
      color: var(--text);
      background-color: var(--bg);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      line-height: 1.6;
    }

    /* ---------- CONTENEDOR PRINCIPAL ---------- */
    .form_center_div {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: var(--space-xl) 5%;
    }

    /* ---------- FORMULARIO (MÁS ANCHO) ---------- */
    .form {
      width: 100%;
      max-width: 650px;
      /* Aumentado de 500px a 650px */
      background: var(--bg-card);
      padding: var(--space-xl);
      border-radius: 12px;
      box-shadow: var(--shadow-md);
      border: 1px solid var(--border);
    }

    .div_sub_container_form {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-lg);
      position: relative;
    }

    .title {
      font-family: var(--font-heading);
      font-size: 1.8rem;
      color: var(--primary);
      text-align: center;
      flex-grow: 1;
    }

    /* ---------- BOTÓN DE REGRESO ---------- */
    .button_back {
      position: absolute;
      left: 0;
      color: var(--primary);
      transition: var(--transition);
    }

    .button_back:hover {
      transform: translateX(-4px);
      color: var(--primary-dark);
    }

    .button_back_box {
      display: flex;
      align-items: center;
    }

    .button_back svg {
      width: 24px;
      height: 24px;
      fill: currentColor;
    }

    /* ---------- CAMPOS DEL FORMULARIO (MÁS ANCHOS) ---------- */
    label {
      position: relative;
      margin-bottom: var(--space-md);
      display: block;
    }

    .input {
      width: 100%;
      padding: var(--space-sm) var(--space-md);
      /* Más padding horizontal */
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      font-family: var(--font-main);
      font-size: 1rem;
      transition: var(--transition);
      background: var(--bg);
      color: var(--text);
      /* Color de texto consistente */
    }

    .input::placeholder {
      color: var(--text-light);
      /* Color gris para placeholder */
    }

    .input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 2px var(--primary-light);
    }

    label span {
      position: absolute;
      left: var(--space-md);
      /* Ajustado para coincidir con el padding del input */
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-light);
      transition: var(--transition);
      pointer-events: none;
      background: var(--bg-card);
      padding: 0 4px;
    }

    .input:focus+span,
    .input:not(:placeholder-shown)+span {
      top: 0;
      font-size: 0.8rem;
      color: var(--primary);
    }

    /* ---------- SELECT PERSONALIZADO CON COLOR MORADO AL SELECCIONAR ---------- */
select.input {
  appearance: none;
  background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
  background-repeat: no-repeat;
  background-position: right var(--space-md) center;
  background-size: 1em;
  color: var(--text-light); /* Texto gris por defecto */
}

select.input:valid,
select.input:focus,
select.input option:checked {
  color: var(--primary); /* Texto morado cuando tiene valor seleccionado */
}

select.input option {
  color: var(--text); /* Texto negro para las opciones */
}

select.input option[value=""][disabled] {
  color: var(--text-light); /* Texto gris para la opción por defecto */
}
    /* ---------- SUBIDA DE ARCHIVOS ---------- */
    .file-upload {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: var(--space-lg);
      border: 2px dashed var(--border);
      border-radius: var(--radius-md);
      background: var(--bg);
      cursor: pointer;
      transition: var(--transition);
      margin-bottom: var(--space-md);
    }

    .file-upload:hover {
      border-color: var(--primary);
      background: var(--primary-light);
    }

    .file-upload i {
      font-size: 2rem;
      color: var(--primary);
      margin-bottom: var(--space-sm);
    }

    .file-upload span {
      color: var(--text-light);
      text-align: center;
    }

    .file-input {
      display: none;
    }

    /* ---------- BOTÓN DE ENVÍO (MÁS ANCHO) ---------- */
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-sm) var(--space-md);
      font-size: 1rem;
      font-weight: 600;
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: var(--transition);
      text-decoration: none;
      border: none;
      gap: var(--space-sm);
    }

    .button_color_primary {
      background-color: var(--primary);
      color: white;
      width: 100%;
      margin-top: var(--space-md);
      padding: var(--space-md);
      /* Más padding para un botón más grande */
    }

    .button_color_primary:hover {
      background-color: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    /* ---------- FOOTER ---------- */
    .footer {
      background-color: var(--bg-card);
      padding: var(--space-xl) 5%;
      border-top: 1px solid var(--border);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer_row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-lg);
    }

    .footer_links {
      margin-bottom: var(--space-md);
    }

    .footer_links h4 {
      font-family: var(--font-heading);
      font-size: 1.2rem;
      margin-bottom: var(--space-sm);
      color: var(--primary);
    }

    .footer_links ul {
      list-style: none;
    }

    .footer_links li {
      margin-bottom: var(--space-xs);
    }

    .footer_links a {
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
      font-size: 0.9rem;
    }

    .footer_links a:hover {
      color: var(--primary);
    }

    .social_links {
      display: flex;
      gap: var(--space-sm);
    }

    .social_links a {
      color: var(--text-light);
      transition: var(--transition);
    }

    .social_links a:hover {
      color: var(--primary);
      transform: translateY(-2px);
    }

    /* ---------- MEDIA QUERIES ---------- */
    @media (max-width: 768px) {
      .form {
        padding: var(--space-lg);
        max-width: 90%;
        /* Más ancho en móviles */
      }

      .title {
        font-size: 1.5rem;
      }
    }

    @media (max-width: 480px) {
      .form_center_div {
        padding: var(--space-lg) var(--space-sm);
      }

      .title {
        font-size: 1.3rem;
      }

      .input {
        padding: var(--space-sm);
        /* Menos padding en móviles muy pequeños */
      }
    }
  </style>
</head>

<body>
  <div class="form_center_div">
    <form class="form" id="form" action="/entrepreneurship/create-entrepreneurship" method="POST"
      enctype="multipart/form-data">
      <div class="div_sub_container_form">
        <a href="entrepreneur" class="button_back">
          <div class="button_back_box">
            <span class="button_elem">
              <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M0 20.038c0-.7.3-1.5.8-2.1l16-17c1.1-1 3.2-1.4 4.4-.3 1.2 1.1 1.2 3.3 0 4.4L9.9 20.038H43c1.7 0 3 1.3 3 3s-1.3 3-3 3H9.9l11.3 11.9c1 1 1.2 3.3 0 4.4-1.2 1.1-3.3.8-4.4-.3l-16-17c-.5-.5-.8-1.1-.8-1.9z">
                </path>
              </svg>
            </span>
          </div>
        </a>
        <p class="title">Registrar Emprendimiento</p>
      </div>

      <label>
        <input name="name" required type="text" class="input" placeholder=" " />
        <span>Nombre del emprendimiento</span>
      </label>

      <label>
        <textarea name="description" required class="input" placeholder=" "
          style="min-height: 100px; resize: vertical;"></textarea>
        <span>Descripción</span>
      </label>

      <label>
        <input name="address" required type="text" class="input" placeholder=" " />
        <span>Ubicación</span>
      </label>

      <label>
        <input name="phone" required type="tel" class="input" placeholder=" " />
        <span>Teléfono del emprendimiento</span>
      </label>
      
      <label>
        <select name="type_entrepreneur" required class="input">
          <option value="" disabled selected>Seleccione un tipo</option>
          <option value="Comida">Comida</option>
          <option value="Artesanía">Artesanía</option>
          <option value="Tecnología">Tecnología</option>
          <option value="Servicios">Servicios</option>
          <option value="Otro">Otro</option>
        </select>
        <span>Tipo de emprendimiento</span>
      </label>



      <label class="file-upload">
        <input type="file" id="file" name="img" accept="image/*" class="file-input" required />
        <i class="fas fa-cloud-upload-alt"></i>
        <span style="margin-top: 30px;margin-left: 58px;">Haz clic para subir una imagen del emprendimiento</span>
      </label>

      <button type="submit" class="button button_color_primary">
        <i class="fas fa-plus"></i> Crear emprendimiento
      </button>
    </form>
  </div>

  <footer class="footer">
    <div class="container">
      <div class="footer_row">
        <div class="footer_links">
          <h4>Mis vecinos</h4>
          <ul>
            <li><a href="#">Code Crafters team</a></li>
            <li><a href="#">codecrafters.com</a></li>
            <li><a href="#">#code-crafters</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Compañía</h4>
          <ul>
            <li><a href="#">Sobre nosotros</a></li>
            <li><a href="#">Cómo trabajar con nosotros</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Contáctanos</h4>
          <ul>
            <li><a href="#">(506) 60324248</a></li>
            <li><a href="#">info@codecrafters.com</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Síguenos en redes sociales</h4>
          <div class="social_links">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('form').addEventListener('submit', async function (e) {
      e.preventDefault();

      const formData = new FormData(this);

      try {
        const response = await fetch(this.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token')
          }
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || 'Error al registrar el emprendimiento');
        }

        const data = await response.json();
        alert('¡Emprendimiento registrado con éxito!');
        window.location.href = '/entrepreneur';
      } catch (error) {
        console.error('Error:', error);
        alert(`Error: ${error.message}`);
      }
    });

    // Mostrar nombre del archivo seleccionado
    document.getElementById('file').addEventListener('change', function (e) {
      const fileName = e.target.files[0]?.name || 'Ningún archivo seleccionado';
      document.querySelector('.file-upload span').textContent = fileName;
    });

    // Manejar el color del texto del select
    document.querySelector('select[name="type_entrepreneur"]').addEventListener('change', function () {
      if (this.value !== "") {
        this.style.color = 'var(--text)';
      } else {
        this.style.color = 'var(--text-light)';
      }
    });
  </script>
</body>

</html>