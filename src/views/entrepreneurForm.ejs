<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Registrar Emprendimiento | Mis Vecinos</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="css/CssForms/entrepreneurForm.css">
</head>

<body>
  <div class="form_center_div">
    <form class="form" id="form" action="/entrepreneurship/create-entrepreneurship" method="POST"
      enctype="multipart/form-data">
      <div class="div_sub_container_form">
        <a href="entrepreneur" class="button_back">
          <div class="button_back_box">
            <span class="button_elem">
              <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M0 20.038c0-.7.3-1.5.8-2.1l16-17c1.1-1 3.2-1.4 4.4-.3 1.2 1.1 1.2 3.3 0 4.4L9.9 20.038H43c1.7 0 3 1.3 3 3s-1.3 3-3 3H9.9l11.3 11.9c1 1 1.2 3.3 0 4.4-1.2 1.1-3.3.8-4.4-.3l-16-17c-.5-.5-.8-1.1-.8-1.9z">
                </path>
              </svg>
            </span>
          </div>
        </a>
        <p class="title">Registrar Emprendimiento</p>
      </div>

      <label>
        <input name="name" required type="text" class="input" placeholder=" " />
        <span>Nombre del emprendimiento</span>
      </label>

      <label>
        <textarea name="description" required class="input" placeholder=" "
          style="min-height: 100px; resize: vertical;"></textarea>
        <span>Descripción</span>
      </label>

      <label>
        <input name="address" required type="text" class="input" placeholder=" " />
        <span>Ubicación</span>
      </label>

      <label>
        <input name="phone" required type="tel" class="input" placeholder=" " />
        <span>Teléfono del emprendimiento</span>
      </label>
      
      <label>
        <select name="type_entrepreneur" required class="input">
          <option value="" disabled selected>Seleccione un tipo</option>
          <option value="Comida">Comida</option>
          <option value="Artesanía">Artesanía</option>
          <option value="Tecnología">Tecnología</option>
          <option value="Servicios">Servicios</option>
          <option value="Otro">Otro</option>
        </select>
        <span>Tipo de emprendimiento</span>
      </label>



      <label class="file-upload">
        <input type="file" id="file" name="img" accept="image/*" class="file-input" required />
        <i class="fas fa-cloud-upload-alt"></i>
        <span style="margin-top: 30px;margin-left: 58px;">Haz clic para subir una imagen del emprendimiento</span>
      </label>

      <button type="submit" class="button button_color_primary">
        <i class="fas fa-plus"></i> Crear emprendimiento
      </button>
    </form>
  </div>

  <footer class="footer">
    <div class="container">
      <div class="footer_row">
        <div class="footer_links">
          <h4>Mis vecinos</h4>
          <ul>
            <li><a href="#">Code Crafters team</a></li>
            <li><a href="#">codecrafters.com</a></li>
            <li><a href="#">#code-crafters</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Compañía</h4>
          <ul>
            <li><a href="#">Sobre nosotros</a></li>
            <li><a href="#">Cómo trabajar con nosotros</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Contáctanos</h4>
          <ul>
            <li><a href="#">(506) 60324248</a></li>
            <li><a href="#">info@codecrafters.com</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Síguenos en redes sociales</h4>
          <div class="social_links">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('form').addEventListener('submit', async function (e) {
      e.preventDefault();

      const formData = new FormData(this);

      try {
        const response = await fetch(this.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token')
          }
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || 'Error al registrar el emprendimiento');
        }

        const data = await response.json();
        alert('¡Emprendimiento registrado con éxito!');
        window.location.href = '/entrepreneur';
      } catch (error) {
        console.error('Error:', error);
        alert(`Error: ${error.message}`);
      }
    });

    // Mostrar nombre del archivo seleccionado
    document.getElementById('file').addEventListener('change', function (e) {
      const fileName = e.target.files[0]?.name || 'Ningún archivo seleccionado';
      document.querySelector('.file-upload span').textContent = fileName;
    });

    // Manejar el color del texto del select
    document.querySelector('select[name="type_entrepreneur"]').addEventListener('change', function () {
      if (this.value !== "") {
        this.style.color = 'var(--text)';
      } else {
        this.style.color = 'var(--text-light)';
      }
    });
  </script>
</body>

</html>