        <li><a href="profile">Mi perfil</a></li>
      </ul>
    </div>
  </nav>

  <div class="container_header">
    <div class="header">
      <h1 class="welcome-text">
        <i class="fas fa-users"></i> Gestión de Usuarios
      </h1>
      <div class="button-group">
       <a href="users" class="button button-outline">
            <i class="fas fa-list"></i> Ver todos los usuarios
        </a>
        <a href="userForm" class="button">
          <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
      </div>
    </div>

    <div class="users-controls">
      <div class="users-count">
        <i class="fas fa-user-friends"></i> 28 usuarios encontrados
      </div>
      
      <div class="users-filters">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Buscar usuarios...">
        </div>
        
        <select class="filter-select">
          <option>Todos los roles</option>
          <option>Administrador</option>
          <option>Moderador</option>
          <option>Usuario</option>
        </select>
        
        <select class="filter-select">
          <option>Ordenar por</option>
          <option>Nombre A-Z</option>
          <option>Nombre Z-A</option>
          <option>Más recientes</option>
        </select>
      </div>
    </div>

    <div class="container_cards">
      <!-- Tarjeta de usuario 1 -->
      <div class="card">
        <div class="card-header">
          <img src="/imgs/perfil.jpg" alt="Carlos Perez" class="user-avatar">
          <div class="user-info">
            <h3>Carlos Perez</h3>
            <div class="user-email">
              <i class="far fa-envelope"></i> carlos@example.com
            </div>
          </div>
          <div class="user-status"></div>
        </div>
        
        <div class="card-content">
          <div class="user-details">
            <p><i class="fas fa-birthday-cake"></i> <strong>Nació:</strong> 20 de agosto</p>
            <p><i class="fas fa-user-tag"></i> <strong>Rol:</strong> <span class="user-role role-admin">Administrador</span></p>
            <p><i class="fas fa-clock"></i> <strong>Última conexión:</strong> Hoy, 14:30</p>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="button button-outline">
            <i class="fas fa-edit"></i> Editar
          </button>
          <button class="button button-danger">
            <i class="fas fa-trash"></i> Eliminar
          </button>
        </div>
      </div>

      <!-- Tarjeta de usuario 2 -->
      <div class="card">
        <div class="card-header">
          <img src="/imgs/perfil.jpg" alt="Josue Valverde" class="user-avatar">
          <div class="user-info">
            <h3>Josue Valverde</h3>
            <div class="user-email">
              <i class="far fa-envelope"></i> josue@example.com
            </div>
          </div>
          <div class="user-status inactive"></div>
        </div>
        
        <div class="card-content">
          <div class="user-details">
            <p><i class="fas fa-birthday-cake"></i> <strong>Nació:</strong> 1 de agosto</p>
            <p><i class="fas fa-user-tag"></i> <strong>Rol:</strong> <span class="user-role role-moderator">Moderador</span></p>
            <p><i class="fas fa-clock"></i> <strong>Última conexión:</strong> Hace 3 días</p>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="button button-outline">
            <i class="fas fa-edit"></i> Editar
          </button>
          <button class="button button-danger">
            <i class="fas fa-trash"></i> Eliminar
          </button>
        </div>
      </div>

      <!-- Tarjeta de usuario 3 -->
      <div class="card">
        <div class="card-header">
          <img src="/imgs/perfil.jpg" alt="Joaquin Pappa" class="user-avatar">
          <div class="user-info">
            <h3>Joaquin Pappa</h3>
            <div class="user-email">
              <i class="far fa-envelope"></i> joaquin@example.com
            </div>
          </div>
          <div class="user-status"></div>
        </div>
        
        <div class="card-content">
          <div class="user-details">
            <p><i class="fas fa-birthday-cake"></i> <strong>Nació:</strong> 7 de agosto</p>
            <p><i class="fas fa-user-tag"></i> <strong>Rol:</strong> <span class="user-role role-user">Usuario</span></p>
            <p><i class="fas fa-clock"></i> <strong>Última conexión:</strong> Ayer, 09:15</p>
          </div>
        </div>
        
        <div class="card-actions">
          <button class="button button-outline">
            <i class="fas fa-edit"></i> Editar
          </button>
          <button class="button button-danger">
            <i class="fas fa-trash"></i> Eliminar
          </button>
        </div>
      </div>
    </div>

    <div class="pagination">
      <button><i class="fas fa-chevron-left"></i></button>
      <button class="active">1</button>
      <button>2</button>
      <button>3</button>
      <button><i class="fas fa-chevron-right"></i></button>
    </div>
  </div>

