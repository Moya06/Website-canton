    /* ---------- VARIABLES ---------- */
    :root {
      --primary: #6d28d9;
      --primary-dark: #5b21b6;
      --primary-light: rgba(109, 40, 217, 0.1);
      --text: #1f2937;
      --text-light: #6b7280;
      --bg: #f9fafb;
      --bg-card: #ffffff;
      --border: #e5e7eb;
      --error: #dc2626;
      --success: #059669;

      --font-main: 'Inter', sans-serif;
      --font-heading: 'Playfair Display', serif;

      --space-xs: 0.4rem;
      --space-sm: 0.8rem;
      --space-md: 1.2rem;
      --space-lg: 2rem;
      --space-xl: 3rem;

      --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
      --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
      --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1);

      --transition: all 0.25s ease;
      --radius: 8px;
    }

    /* ---------- RESETEO ---------- */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-main);
      color: var(--text);
      background-color: var(--bg);
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* ---------- NAVBAR ---------- */
    nav {
      background-color: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(8px);
      position: sticky;
      top: 0;
      z-index: 100;
      border-bottom: 1px solid var(--border);
      padding: var(--space-sm) 5%;
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo img {
      height: 40px;
      transition: var(--transition);
    }

    .logo img:hover {
      transform: translateY(-2px);
    }

    /* ---------- MENÚ HAMBURGUESA ---------- */
    #toggle {
      display: none;
    }

    .hamburger {
      display: none;
      cursor: pointer;
      padding: var(--space-sm);
    }

    .hamburger svg {
      width: 32px;
      height: 32px;
    }

    .hamburger .line {
      fill: none;
      stroke: var(--text);
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
      transition: var(--transition);
    }

    /* ---------- MENÚ ---------- */
    .menu {
      display: flex;
      list-style: none;
      gap: var(--space-md);
      align-items: center;
    }

    .menu a {
      font-size: 0.95rem;
      font-weight: 500;
      color: var(--text);
      text-decoration: none;
      transition: var(--transition);
      padding: var(--space-sm) 0;
      position: relative;
    }

    .menu a:hover {
      color: var(--primary);
    }

    .menu a::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background-color: var(--primary);
      transition: var(--transition);
    }

    .menu a:hover::after {
      width: 100%;
    }

    /* ---------- HEADER Y SECCIONES ---------- */
    .container_header {
      flex-grow: 1;
      padding: var(--space-xl) 5%;
    }

    .header {
      max-width: 1200px;
      margin: 0 auto var(--space-xl);
      display: flex;
      align-items: center;
      gap: var(--space-md);
      flex-wrap: wrap;
    }

    .welcome-text {
      font-family: var(--font-heading);
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: var(--space-sm);
    }

    .section {
      max-width: 1200px;
      margin: 0 auto var(--space-xl);
    }

    .section h2 {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: var(--space-lg);
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: var(--space-sm);
    }

    /* ---------- CONTROLES DE USUARIOS ---------- */
    .users-controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-lg);
      flex-wrap: wrap;
      gap: var(--space-md);
      background: white;
      padding: var(--space-md);
      border-radius: var(--radius);
      box-shadow: var(--shadow-sm);
    }

    .users-count {
      font-weight: 600;
      color: var(--text-light);
      display: flex;
      align-items: center;
      gap: var(--space-xs);
    }

    .users-filters {
      display: flex;
      gap: var(--space-sm);
      align-items: center;
      flex-wrap: wrap;
    }

    .search-box {
      display: flex;
      align-items: center;
      background: var(--bg);
      border-radius: 25px;
      padding: 0 var(--space-sm);
      border: 1px solid var(--border);
      transition: var(--transition);
    }

    .search-box:focus-within {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px var(--primary-light);
    }

    .search-box input {
      border: none;
      background: transparent;
      padding: var(--space-sm);
      width: 250px;
      outline: none;
      font-size: 0.9rem;
    }

    .filter-select {
      padding: var(--space-sm) var(--space-md);
      border-radius: 25px;
      border: 1px solid var(--border);
      background: white;
      font-size: 0.9rem;
      cursor: pointer;
      transition: var(--transition);
    }

    .filter-select:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px var(--primary-light);
    }

    /* ---------- BOTONES ---------- */
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-sm) var(--space-md);
      font-size: 0.95rem;
      font-weight: 500;
      border-radius: 4px;
      cursor: pointer;
      transition: var(--transition);
      text-decoration: none;
      background-color: var(--primary);
      color: white;
      gap: var(--space-xs);
      border: none;
    }
    .button2{
      
    }
    .button:hover {
      background-color: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    .button-outline {
      background-color: transparent;
      border: 1px solid var(--primary);
      color: var(--primary);
    }

    .button-outline:hover {
      background-color: var(--primary-light);
    }

    .button-danger {
      background-color: var(--error);
    }

    .button-danger:hover {
      background-color: #b91c1c;
    }

    .button-group {
      display: flex;
      gap: var(--space-sm);
      margin-left: auto;
    }

    /* ---------- CARDS DE USUARIOS ---------- */
    .container_cards {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-md);
      margin-bottom: var(--space-xl);
    }

    .card {
      background-color: var(--bg-card);
      border-radius: var(--radius);
      overflow: hidden;
      border: 1px solid var(--border);
      transition: var(--transition);
      display: flex;
      flex-direction: column;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-md);
      border-color: rgba(109, 40, 217, 0.2);
    }

    .card-header {
      position: relative;
      padding: var(--space-md);
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: var(--space-md);
    }

    .user-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid var(--primary-light);
    }

    .user-status {
      position: absolute;
      bottom: 12px;
      right: 12px;
      width: 14px;
      height: 14px;
      border-radius: 50%;
      background: var(--success);
      border: 2px solid white;
    }

    .user-status.inactive {
      background: var(--error);
    }

    .user-info h3 {
      font-family: var(--font-heading);
      font-size: 1.2rem;
      margin-bottom: var(--space-xs);
    }

    .user-email {
      font-size: 0.85rem;
      color: var(--text-light);
      display: flex;
      align-items: center;
      gap: var(--space-xs);
    }

    .card-content {
      padding: var(--space-md);
      flex-grow: 1;
    }

    .user-details {
      margin-bottom: var(--space-md);
    }

    .user-details p {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      margin-bottom: var(--space-xs);
      font-size: 0.9rem;
    }

    .user-role {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 500;
    }

    .role-admin {
      background: #ffebee;
      color: #d32f2f;
    }

    .role-user {
      background: #e8f5e9;
      color: #388e3c;
    }

    .role-moderator {
      background: #e3f2fd;
      color: #1976d2;
    }

    .card-actions {
      display: flex;
      gap: var(--space-sm);
      padding: 0 var(--space-md) var(--space-md);
    }

    .card-actions button {
      flex: 1;
      padding: var(--space-sm);
    }

    /* ---------- PAGINACIÓN ---------- */
    .pagination {
      display: flex;
      justify-content: center;
      gap: var(--space-xs);
      margin: var(--space-xl) 0;
    }

    .pagination button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 1px solid var(--border);
      background: white;
      cursor: pointer;
      transition: var(--transition);
    }

    .pagination button:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    .pagination button.active {
      background: var(--primary);
      color: white;
      border-color: var(--primary);
    }

    /* ---------- FOOTER ---------- */
    .footer {
      background-color: white;
      padding: var(--space-xl) 5%;
      border-top: 1px solid var(--border);
      width: 100%;
    }

    .footer .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer_row {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-lg);
    }

    .footer_links {
      margin-bottom: var(--space-md);
    }

    .footer_links h4 {
      font-family: var(--font-heading);
      font-size: 1.2rem;
      margin-bottom: var(--space-sm);
      color: var(--primary);
      font-weight: 700;
    }

    .footer_links ul {
      list-style: none;
      padding: 0;
    }

    .footer_links li {
      margin-bottom: var(--space-xs);
      color: var(--text-light);
      font-size: 0.9rem;
    }

    .footer_links a {
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
      font-size: 0.9rem;
      display: inline-block;
    }

    .footer_links a:hover {
      color: var(--primary);
      transform: translateX(4px);
    }

    .social_links {
      display: flex;
      gap: var(--space-sm);
    }

    .social_links a {
      color: var(--text-light);
      transition: var(--transition);
      font-size: 1.2rem;
    }

    .social_links a:hover {
      color: var(--primary);
      transform: translateY(-2px);
    }

    /* ---------- MEDIA QUERIES ---------- */
    /* Tablet */
    @media (max-width: 992px) {
      .header {
        flex-direction: column;
        text-align: center;
      }
      
      .users-controls {
        flex-direction: column;
        align-items: stretch;
      }
      
      .search-box input {
        width: 100%;
      }
      
      .button-group {
        margin-left: 0;
        width: 100%;
        justify-content: center;
      }
      
      nav {
        padding: var(--space-sm) 3%;
      }
    }

    /* Menú en móviles */
    @media (max-width: 768px) {
      .hamburger {
        display: block;
      }
      .menu {
        position: fixed;
        top: 70px;
        left: 0;
        width: 100%;
        background-color: white;
        flex-direction: column;
        padding: var(--space-md);
        box-shadow: var(--shadow-md);
        transform: translateY(-150%);
        transition: transform 0.3s ease;
        z-index: 99;
      }
      #toggle:checked ~ .menu {
        transform: translateY(0);
      }
      
      .footer_row {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .container_cards {
        grid-template-columns: 1fr;
      }
    }

    /* Teléfonos pequeños */
    @media (max-width: 480px) {
      .section h2 {
        font-size: 1.3rem;
      }
      
      .filter-select {
        width: 100%;
      }
      
      .footer_row {
        grid-template-columns: 1fr;
      }
      
