  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">
  <!-- Íconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* ---------- VARIABLES ---------- */
    :root {
      --primary: #6d28d9;
      --primary-dark: #5b21b6;
      --primary-light: rgba(109, 40, 217, 0.1);
      --text: #1f2937;
      --text-light: #6b7280;
      --bg: #f9fafb;
      --bg-card: #ffffff;
      --border: #e5e7eb;
      --error: #dc2626;

      --font-main: 'Inter', sans-serif;
      --font-heading: 'Playfair Display', serif;

      --space-xs: 0.4rem;
      --space-sm: 0.8rem;
      --space-md: 1.2rem;
      --space-lg: 2rem;
      --space-xl: 3rem;

      --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
      --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
      --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1);

      --transition: all 0.25s ease;
    }

    /* ---------- RESETEO ---------- */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-main);
      color: var(--text);
      background-color: var(--bg);
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* ---------- NAVBAR ---------- */
    nav {
      background-color: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(8px);
      position: sticky;
      top: 0;
      z-index: 100;
      border-bottom: 1px solid var(--border);
      padding: var(--space-sm) 5%;
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo img {
      height: 40px;
      transition: var(--transition);
    }

    .logo img:hover {
      transform: translateY(-2px);
    }

    /* ---------- MENÚ HAMBURGUESA ---------- */
    #toggle {
      display: none;
    }

    .hamburger {
      display: none;
      cursor: pointer;
      padding: var(--space-sm);
    }

    .hamburger svg {
      width: 32px;
      height: 32px;
    }

    .hamburger .line {
      fill: none;
      stroke: var(--text);
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
      transition: var(--transition);
    }

    /* ---------- MENÚ ---------- */
    .menu {
      display: flex;
      list-style: none;
      gap: var(--space-md);
      align-items: center;
    }

    .menu a {
      font-size: 0.95rem;
      font-weight: 500;
      color: var(--text);
      text-decoration: none;
      transition: var(--transition);
      padding: var(--space-sm) 0;
      position: relative;
    }

    .menu a:hover {
      color: var(--primary);
    }

    .menu a::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background-color: var(--primary);
      transition: var(--transition);
    }

    .menu a:hover::after {
      width: 100%;
    }

    /* ---------- CONTENIDO PRINCIPAL ---------- */
    .container_header {
      flex-grow: 1;
      padding: var(--space-xl) 5%;
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    @media (min-width: 992px) {
      .container_header {
        grid-template-columns: 1fr 1fr;
      }
    }

    /* ---------- TARJETA DE PERFIL ---------- */
    .profile-card {
      background-color: var(--bg-card);
      border-radius: 8px;
      padding: var(--space-lg);
      border: 1px solid var(--border);
      box-shadow: var(--shadow-sm);
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .profile-card img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: var(--space-md);
      border: 3px solid var(--primary-light);
    }

    .profile-info {
      width: 100%;
    }

    .profile-info h2 {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      color: var(--primary);
      margin-bottom: var(--space-lg);
    }

    .profile-detail {
      display: flex;
      justify-content: space-between;
      padding: var(--space-sm) 0;
      border-bottom: 1px solid var(--border);
    }

    .profile-detail:last-child {
      border-bottom: none;
    }

    .profile-detail strong {
      color: var(--primary);
      font-weight: 600;
    }

    .profile-detail p {
      color: var(--text);
    }

    /* ---------- FORMULARIO DE EDICIÓN ---------- */
    .edit-form {
      background-color: var(--bg-card);
      border-radius: 8px;
      padding: var(--space-lg);
      border: 1px solid var(--border);
      box-shadow: var(--shadow-sm);
    }

    .edit-form h2 {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      color: var(--primary);
      margin-bottom: var(--space-lg);
      text-align: center;
    }

    .form-group {
      margin-bottom: var(--space-md);
    }

    .form-group label {
      display: block;
      margin-bottom: var(--space-xs);
      font-weight: 500;
      color: var(--text);
    }

    .form-control {
      width: 100%;
      padding: var(--space-sm);
      border: 1px solid var(--border);
      border-radius: 4px;
      font-family: var(--font-main);
      font-size: 0.95rem;
      transition: var(--transition);
    }

    .form-control:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 2px var(--primary-light);
    }

    /* ---------- BOTONES ---------- */
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-sm) var(--space-md);
      font-size: 0.95rem;
      font-weight: 500;
      border-radius: 4px;
      cursor: pointer;
      transition: var(--transition);
      text-decoration: none;
      background-color: var(--primary);
      color: white;
      gap: var(--space-xs);
      border: none;
      width: 100%;
      margin-top: var(--space-md);
    }

    .button:hover {
      background-color: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    .button-outline {
      background-color: transparent;
      border: 1px solid var(--primary);
      color: var(--primary);
    }

    .button-outline:hover {
      background-color: var(--primary-light);
    }

    .logout-container {
      display: flex;
      justify-content: center;
      padding: var(--space-xl) 5%;
    }

    .logout-btn {
      background-color: var(--error);
    }

    .logout-btn:hover {
      background-color: #b91c1c;
    }

    /* ---------- FOOTER ---------- */
    .footer {
      background-color: white;
      padding: var(--space-xl) 5%;
      border-top: 1px solid var(--border);
      width: 100%;
    }

    .footer .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer_row {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-lg);
    }

    .footer_links {
      margin-bottom: var(--space-md);
    }

    .footer_links h4 {
      font-family: var(--font-heading);
      font-size: 1.2rem;
      margin-bottom: var(--space-sm);
      color: var(--primary);
      font-weight: 700;
    }

    .footer_links ul {
      list-style: none;
      padding: 0;
    }

    .footer_links li {
      margin-bottom: var(--space-xs);
      color: var(--text-light);
      font-size: 0.9rem;
    }

    .footer_links a {
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
      font-size: 0.9rem;
      display: inline-block;
    }

    .footer_links a:hover {
      color: var(--primary);
      transform: translateX(4px);
    }

    .social_links {
      display: flex;
      gap: var(--space-sm);
    }

    .social_links a {
      color: var(--text-light);
      transition: var(--transition);
      font-size: 1.2rem;
    }

    .social_links a:hover {
      color: var(--primary);
      transform: translateY(-2px);
    }

    /* ---------- MEDIA QUERIES ---------- */
    /* Tablet */
    @media (max-width: 992px) {
      nav {
        padding: var(--space-sm) 3%;
      }
    }

    /* Menú en móviles */
    @media (max-width: 768px) {
      .hamburger {
        display: block;
      }
      .menu {
        position: fixed;
        top: 70px;
        left: 0;
        width: 100%;
        background-color: white;
        flex-direction: column;
        padding: var(--space-md);
        box-shadow: var(--shadow-md);
        transform: translateY(-150%);
        transition: transform 0.3s ease;
        z-index: 99;
      }
      #toggle:checked ~ .menu {
        transform: translateY(0);
      }
      
      .footer_row {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    /* Teléfonos pequeños */
    @media (max-width: 480px) {
      .footer_row {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

