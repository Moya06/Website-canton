  <div class="container_header">
    <!-- Tarjeta de perfil -->
    <section class="profile-card">
      <img src="/imgs/perfil.jpg" alt="Foto de perfil">
      <div class="profile-info">
        <h2>Datos del usuario</h2>
        <div class="profile-detail">
          <strong>Nombre:</strong>
          <p>Carlos Pérez</p>
        </div>
        <div class="profile-detail">
          <strong>Correo:</strong>
          <p>carlos@example.com</p>
        </div>
        <div class="profile-detail">
          <strong>Teléfono:</strong>
          <p>+506 1234-5678</p>
        </div>
        <div class="profile-detail">
          <strong>Fecha de nacimiento:</strong>
          <p>20/08/1990</p>
        </div>
        <div class="profile-detail">
          <strong>Rol:</strong>
          <p>Ciudadano</p>
        </div>
      </div>
    </section>

    <!-- Formulario de edición -->
    <form class="edit-form">
      <h2>Editar información</h2>
      <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" id="name" class="form-control" value="Carlos">
      </div>
      <div class="form-group">
        <label for="lastname">Apellido</label>
        <input type="text" id="lastname" class="form-control" value="Pérez">
      </div>
      <div class="form-group">
        <label for="email">Correo electrónico</label>
        <input type="email" id="email" class="form-control" value="carlos@example.com">
      </div>
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" class="form-control" placeholder="••••••••">
      </div>
      <div class="form-group">
        <label for="phone">Teléfono</label>
        <input type="tel" id="phone" class="form-control" value="+506 1234-5678">
      </div>
      <div class="form-group">
        <label for="birthdate">Fecha de nacimiento</label>
        <input type="date" id="birthdate" class="form-control" value="1990-08-20">
      </div>
      <button type="submit" class="button">
        <i class="fas fa-save"></i> Guardar cambios
      </button>
    </form>
  </div>

  <div class="logout-container">
    <button class="button logout-btn">
      <i class="fas fa-sign-out-alt"></i> Cerrar sesión
    </button>
  </div>

  <footer class="footer">
