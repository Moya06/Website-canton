<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Crear Evento | Mis Vecinos</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet"
  />
  <style>
    :root {
      --primary: #6d28d9;
      --primary-dark: #5b21b6;
      --primary-light: rgba(109, 40, 217, 0.1);
      --text: #1f2937;
      --text-light: #6b7280;
      --bg: #f9fafb;
      --bg-card: #ffffff;
      --border: #e5e7eb;
      --error: #dc2626;
      --font-main: 'Inter', sans-serif;
      --font-heading: 'DM Serif Text', serif;
      --space-sm: 0.8rem;
      --space-md: 1.2rem;
      --space-lg: 2rem;
      --space-xl: 3rem;
      --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
      --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
      --transition: all 0.25s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-main);
      color: var(--text);
      background-color: var(--bg);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .form_center_div {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: var(--space-xl) 5%;
    }

    .form {
      width: 100%;
      max-width: 500px;
      background: var(--bg-card);
      padding: var(--space-xl);
      border-radius: 12px;
      box-shadow: var(--shadow-md);
      border: 1px solid var(--border);
    }

    .div_sub_container_form {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-lg);
      position: relative;
    }

    .title {
      font-family: var(--font-heading);
      font-size: 1.8rem;
      color: var(--primary);
      text-align: center;
      flex-grow: 1;
    }

    .button_back {
      position: absolute;
      left: 0;
      color: var(--primary);
      transition: var(--transition);
    }

    .button_back:hover {
      transform: translateX(-4px);
      color: var(--primary-dark);
    }

    .button_back_box {
      display: flex;
      align-items: center;
    }

    .button_back svg {
      width: 24px;
      height: 24px;
      fill: currentColor;
    }

    label {
      position: relative;
      margin-bottom: var(--space-md);
      display: block;
    }

    .input, .custom-select {
      width: 100%;
      padding: var(--space-sm);
      border: 1px solid var(--border);
      border-radius: 6px;
      font-family: var(--font-main);
      font-size: 1rem;
      transition: var(--transition);
      background: var(--bg);
    }

    .input:focus, .custom-select:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 2px var(--primary-light);
    }

    label span {
      position: absolute;
      left: var(--space-sm);
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-light);
      transition: var(--transition);
      pointer-events: none;
      background: var(--bg-card);
      padding: 0 4px;
    }

    .input:focus + span,
    .input:not(:placeholder-shown) + span,
    .custom-select:focus + span,
    .custom-select:valid + span {
      top: 0;
      font-size: 0.8rem;
      color: var(--primary);
    }

    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-sm) var(--space-md);
      font-size: 1rem;
      font-weight: 600;
      border-radius: 6px;
      cursor: pointer;
      transition: var(--transition);
      text-decoration: none;
      border: none;
      gap: var(--space-sm);
    }

    .button_color_primary {
      background-color: var(--primary);
      color: white;
      width: 100%;
      margin-top: var(--space-md);
    }

    .button_color_primary:hover {
      background-color: var(--primary-dark);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    /* Estilos para el input de archivo personalizado */
    .custum-file-upload {
      height: 150px;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      cursor: pointer;
      border: 2px dashed var(--border);
      background-color: var(--bg);
      border-radius: 6px;
      padding: var(--space-md);
      margin-bottom: var(--space-md);
      transition: var(--transition);
    }

    .custum-file-upload:hover {
      border-color: var(--primary);
      background-color: var(--primary-light);
    }

    .custum-file-upload .icon svg {
      height: 40px;
      width: 40px;
      fill: var(--primary);
    }

    .custum-file-upload .text {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .custum-file-upload .text span {
      font-weight: 600;
      color: var(--primary);
    }

    /* Estilos para el select */
   /* Estilos mejorados para el select */
  .custom-select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 100%;
  padding: var(--space-sm);
  border: 1px solid var(--border);
  border-radius: 6px;
  font-family: var(--font-main);
  font-size: 1rem;
  transition: var(--transition);
  background-color: var(--bg);
  color: var(--text-light);
  background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%236b7280' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
  background-repeat: no-repeat;
  background-position: right var(--space-sm) center;
  background-size: 1em;
  margin-bottom: var(--space-md);
  cursor: pointer;
  text-align: left; /* Asegura que el texto esté alineado a la izquierda */
}

/* Estilo cuando el select tiene foco */
.custom-select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 2px var(--primary-light);
  color: var(--text);
}

/* Estilo para el dropdown (solo funciona en algunos navegadores) */
.custom-select option {
  padding: 12px 15px;
  background-color: var(--bg-card);
  color: var(--text);
  font-size: 0.95rem;
}

/* Efecto hover en las opciones */
.custom-select option:hover {
  background-color: var(--primary-light) !important;
  color: var(--primary-dark) !important;
}

/* Opción seleccionada */
.custom-select option:checked {
  background-color: var(--primary-light);
  color: var(--primary-dark);
  font-weight: 600;
}


    /* Footer styles */
    .footer {
      background-color: white;
      padding: var(--space-xl) 5%;
      border-top: 1px solid var(--border);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer_row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-lg);
    }

    .footer_links {
      margin-bottom: var(--space-md);
    }

    .footer_links h4 {
      font-family: var(--font-heading);
      font-size: 1.2rem;
      margin-bottom: var(--space-sm);
      color: var(--primary);
    }

    .footer_links ul {
      list-style: none;
    }

    .footer_links li {
      margin-bottom: var(--space-xs);
    }

    .footer_links a {
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
      font-size: 0.9rem;
    }

    .footer_links a:hover {
      color: var(--primary);
    }

    .social_links {
      display: flex;
      gap: var(--space-sm);
    }

    .social_links a {
      color: var(--text-light);
      transition: var(--transition);
    }

    .social_links a:hover {
      color: var(--primary);
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .form {
        padding: var(--space-lg);
      }
      
      .title {
        font-size: 1.5rem;
      }
    }
  </style>
</head>

<body>
<div class="form_center_div">
  <form class="form" id="form" method="POST" action="/evento/create-event">
    <div class="div_sub_container_form">
      <a href="/event" class="button_back">
        <div class="button_back_box">
          <span class="button_elem">
            <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M0 20.038c0-.7.3-1.5.8-2.1l16-17c1.1-1 3.2-1.4 4.4-.3 1.2 1.1 1.2 3.3 0 4.4L9.9 20.038H43c1.7 0 3 1.3 3 3s-1.3 3-3 3H9.9l11.3 11.9c1 1 1.2 3.3 0 4.4-1.2 1.1-3.3.8-4.4-.3l-16-17c-.5-.5-.8-1.1-.8-1.9z">
              </path>
            </svg>
          </span>
        </div>
      </a>
      <p class="title">Crear Evento</p>
    </div>

    <label>
      <input required placeholder="" type="text" class="input" id="name" name="name" />
      <span>Nombre del evento</span>
    </label>

    <label>
      <input required placeholder="" type="text" class="input" id="description" name="description" />
      <span>Descripción</span>
    </label>

    <label>
      <input required placeholder="" type="text" class="input" id="address" name="address" />
      <span>Ubicación</span>
    </label>
    
    <label>
      <input required placeholder="" type="date" class="input" id="date" name="date" />
      <span>Fecha del evento</span>
    </label>

    <label class="custum-file-upload" for="file">
      <div class="icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="" viewBox="0 0 24 24">
          <g stroke-width="0" id="SVGRepo_bgCarrier"></g>
          <g
            stroke-linejoin="round"
            stroke-linecap="round"
            id="SVGRepo_tracerCarrier"
          ></g>
          <g id="SVGRepo_iconCarrier">
            <path
              fill=""
              d="M10 1C9.73478 1 9.48043 1.10536 9.29289 1.29289L3.29289 7.29289C3.10536 7.48043 3 7.73478 3 8V20C3 21.6569 4.34315 23 6 23H7C7.55228 23 8 22.5523 8 22C8 21.4477 7.55228 21 7 21H6C5.44772 21 5 20.5523 5 20V9H10C10.5523 9 11 8.55228 11 8V3H18C18.5523 3 19 3.44772 19 4V9C19 9.55228 19.4477 10 20 10C20.5523 10 21 9.55228 21 9V4C21 2.34315 19.6569 1 18 1H10ZM9 7H6.41421L9 4.41421V7ZM14 15.5C14 14.1193 15.1193 13 16.5 13C17.8807 13 19 14.1193 19 15.5V16V17H20C21.1046 17 22 17.8954 22 19C22 20.1046 21.1046 21 20 21H13C11.8954 21 11 20.1046 11 19C11 17.8954 11.8954 17 13 17H14V16V15.5ZM16.5 11C14.142 11 12.2076 12.8136 12.0156 15.122C10.2825 15.5606 9 17.1305 9 19C9 21.2091 10.7909 23 13 23H20C22.2091 23 24 21.2091 24 19C24 17.1305 22.7175 15.5606 20.9844 15.122C20.7924 12.8136 18.858 11 16.5 11Z"
              clip-rule="evenodd"
              fill-rule="evenodd"
            ></path>
          </g>
        </svg>
      </div>
      <div class="text">
        <span>Subir imagen</span>
      </div>
      <input type="file" id="file" name="image" style="display: none;" />
    </label>

    <button type="submit" class="button button_color_primary">
      <i class="fas fa-plus"></i> Crear Evento
    </button>
  </form>
</div>

  <footer class="footer">
    <div class="container">
      <div class="footer_row">
        <div class="footer_links">
          <h4>Mis vecinos</h4>
          <ul>
            <li><a href="#">Code Crafters team</a></li>
            <li><a href="#">codecrafters.com</a></li>
            <li><a href="#">#code-crafters</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Compañía</h4>
          <ul>
            <li><a href="#">Sobre nosotros</a></li>
            <li><a href="#">Cómo trabajamos</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Contáctanos</h4>
          <ul>
            <li><a href="#">(506) 60324248</a></li>
            <li><a href="#">info@codecrafters.com</a></li>
          </ul>
        </div>
        <div class="footer_links">
          <h4>Síguenos en redes sociales</h4>
          <div class="social_links">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('form').addEventListener('submit', async function (e) {
      e.preventDefault();

      // Get user ID from session
      let userId = null;
      try {
        const sessionResponse = await fetch('/api/session');
        if (sessionResponse.ok) {
          const sessionData = await sessionResponse.json();
          if (sessionData.authenticated && sessionData.user) {
            userId = sessionData.user.id;
          }
        }
      } catch (error) {
        console.warn('Could not get user session');
      }

      if (!userId) {
        alert('Error: No se pudo obtener la información del usuario. Por favor, inicia sesión nuevamente.');
        window.location.href = '/login';
        return;
      }

      // Get form data as regular object
      const formData = {
        name: this.name.value,
        description: this.description.value,
        address: this.address.value,
        date: this.date.value,
        user: userId,
        type: 'event',
        image: this.image?.value || '/imgs/img_cards/event.jpg'
      };

      try {
        const response = await fetch(this.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });

        if (!response.ok) {
          const contentType = response.headers.get('content-type');
          if (contentType && contentType.includes('application/json')) {
            const errorData = await response.json();
            throw new Error(errorData.message || 'Error al crear el evento');
          } else {
            const errorText = await response.text();
            console.error('Server returned HTML instead of JSON:', errorText);
            throw new Error('Error del servidor: ' + response.status + ' ' + response.statusText);
          }
        }

        const data = await response.json();
        alert('¡Evento creado con éxito!');
        
        if (data.redirect) {
          window.location.href = data.redirect;
        } else {
          window.location.href = '/event';
        }
      } catch (error) {
        console.error('Error:', error);
        alert(`Error: ${error.message}`);
      }
    });

    // Mostrar nombre del archivo seleccionado
    document.getElementById('file').addEventListener('change', function (e) {
      const fileName = e.target.files[0]?.name || 'Ningún archivo seleccionado';
      document.querySelector('.custum-file-upload .text span').textContent = fileName;
    });
  </script>
</body>
</html>