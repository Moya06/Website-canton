  <div class="container_header">
    <div class="header">
      <h1 class="welcome-text">
        <i class="fas fa-users"></i> Gestión de Usuarios
      </h1>
      <div class="button-group">
       <a href="users" class="button button-outline">
            <i class="fas fa-list"></i> Ver todos los usuarios
        </a>
        <a href="userForm" class="button">
          <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
      </div>
    </div>

    <div class="container_cards">
      <% if (admins && admins.length > 0) { %>
        <% admins.forEach(admin => { %>
          <div class="card" data-admin-id="<%= admin._id %>">
            <div class="card-header">
              <img src="/imgs/perfil.jpg" alt="<%= admin.name %>" class="user-avatar">
              <div class="user-info">
                <h3><%= admin.name %> <%= admin.last_name %></h3>
                <div class="user-email">
                  <i class="far fa-envelope"></i> <%= admin.email %>
                </div>
              </div>
              <div class="user-status"></div>
            </div>
            
            <div class="card-content">
              <div class="user-details">
                <% if (admin.birthdate) { %>
                  <p><i class="fas fa-birthday-cake"></i> <strong>Nació:</strong> <%= new Date(admin.birthdate).toLocaleDateString() %></p>
                <% } %>
                <p><i class="fas fa-user-tag"></i> <strong>Rol:</strong> <span class="user-role role-admin">Administrador</span></p>
