  <script type="module" src="/js/navAdmin.js"></script>
  
  <script>
    // Función para editar administrador
    function editAdmin(adminId) {
      // Redirigir al formulario de edición
      window.location.href = `/userForm?edit=${adminId}`;
    }

    // Función para eliminar administrador
    async function deleteAdmin(adminId) {
      try {
        // First, check if this is a self-deletion by making a request to check
        const checkResponse = await fetch(`/usuario/${adminId}`, {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
          }
        });

        if (checkResponse.ok) {
          const userData = await checkResponse.json();
          const currentUserResponse = await fetch('/api/session');
          const currentUserData = await currentUserResponse.json();
          
          // Check if this is self-deletion
          if (currentUserData.user && currentUserData.user.id === userData.user._id) {
            // Show SweetAlert for self-deletion
            const result = await Swal.fire({
              title: '¿Eliminar tu propia cuenta?',
              text: 'Este es tu usuario. ¿Deseas eliminarlo? Si confirmas, tu sesión se cerrará.',
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#dc2626',
              cancelButtonColor: '#6b7280',
              confirmButtonText: 'Sí, eliminar mi cuenta',
              cancelButtonText: 'Cancelar'
            });

            if (result.isConfirmed) {
              // Call self-delete endpoint
              const selfDeleteResponse = await fetch('/self-delete', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                }
              });

              const selfDeleteData = await selfDeleteResponse.json();

              if (selfDeleteData.success) {
                await Swal.fire({
                  title: 'Cuenta eliminada',
                  text: selfDeleteData.message,
                  icon: 'success',
                  confirmButtonText: 'OK'
                });
                // Redirect to login
                window.location.href = '/login';
              } else {
                await Swal.fire({
                  title: 'Error',
                  text: selfDeleteData.message,
                  icon: 'error',
                  confirmButtonText: 'OK'
                });
              }
            }
            return;
          }
        }

        // If not self-deletion, proceed with normal deletion
        if (confirm('¿Estás seguro de que quieres eliminar este administrador?')) {
          // Create a temporary form to send DELETE
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/usuario/${adminId}`;
          
          // Add hidden field for DELETE method
          const methodInput = document.createElement('input');
          methodInput.type = 'hidden';
          methodInput.name = '_method';
          methodInput.value = 'DELETE';
          form.appendChild(methodInput);
          
          // Add to DOM and submit
          document.body.appendChild(form);
          form.submit();
        }
      } catch (error) {
        console.error('Error:', error);
        await Swal.fire({
          title: 'Error',
          text: 'Error al eliminar usuario',
          icon: 'error',
          confirmButtonText: 'OK'
        });
      }
    }
  </script>
