// Funci칩n para eliminar usuario
async function deleteUser(userId) {
  try {
    // First, check if this is a self-deletion by making a request to check
    const checkResponse = await fetch(`/usuario/${userId}`, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      }
    });

    if (checkResponse.ok) {
      const userData = await checkResponse.json();
      const currentUserResponse = await fetch('/api/session');
      const currentUserData = await currentUserResponse.json();
      
      // Check if this is self-deletion
      if (currentUserData.user && currentUserData.user.id === userData.user._id) {
        // Show SweetAlert for self-deletion
        const result = await Swal.fire({
          title: '쮼liminar tu propia cuenta?',
          text: 'Este es tu usuario. 쮻eseas eliminarlo? Si confirmas, tu sesi칩n se cerrar치.',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#dc2626',
          cancelButtonColor: '#6b7280',
          confirmButtonText: 'S칤, eliminar mi cuenta',
          cancelButtonText: 'Cancelar'
          // 游녣 Se quit칩 reverseButtons: true
        });

        if (result.isConfirmed) {
          // Call self-delete endpoint
          const selfDeleteResponse = await fetch('/self-delete', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            }
          });

          const selfDeleteData = await selfDeleteResponse.json();

          if (selfDeleteData.success) {
            await Swal.fire({
              title: 'Cuenta eliminada',
              text: selfDeleteData.message,
              icon: 'success',
              confirmButtonText: 'OK'
            });
            // Redirect to login
            window.location.href = '/login';
          } else {
            await Swal.fire({
              title: 'Error',
              text: selfDeleteData.message,
              icon: 'error',
              confirmButtonText: 'OK'
            });
          }
        }
        return;
      }
    }

    // If not self-deletion, proceed with normal deletion using SweetAlert2
    const result = await Swal.fire({
      title: '쮼st치s seguro?',
      text: '쮼st치s seguro de que quieres eliminar este usuario?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#dc2626',
      cancelButtonColor: '#6b7280',
      confirmButtonText: 'S칤, eliminar',
      cancelButtonText: 'Cancelar'
      // 游녣 Se quit칩 reverseButtons: true
    });

    if (result.isConfirmed) {
      // Create a temporary form to send DELETE
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = `/usuario/${userId}`;
      
      // Add hidden field for DELETE method
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'DELETE';
      form.appendChild(methodInput);
      
      // Add to DOM and submit
      document.body.appendChild(form);
      form.submit();
    }
  } catch (error) {
    console.error('Error:', error);
    await Swal.fire({
      title: 'Error',
      text: 'Error al eliminar usuario',
      icon: 'error',
      confirmButtonText: 'OK'
    });
  }
}
