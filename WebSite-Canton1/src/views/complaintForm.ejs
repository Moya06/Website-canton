        </div>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('form').addEventListener('submit', async function(e) {
      e.preventDefault();

      // Get user ID from session or use a default
      let userId = "66b7fcb98d89f13c8c4a3a45"; // Fallback ID
      
      // Try to get user from session
      try {
        const sessionResponse = await fetch('/api/session');
        if (sessionResponse.ok) {
          const sessionData = await sessionResponse.json();
          if (sessionData.authenticated && sessionData.user) {
            userId = sessionData.user.id;
          }
        }
      } catch (error) {
        console.warn('Could not get user session, using fallback ID');
      }
      const form = e.target;

      const data = {
        name: form.name.value,
        description: form.description.value,
        address: form.address.value,
        type: form.type.value,
        user: userId,
        date: new Date().toISOString()
      };

      try {
        const res = await fetch('/queja/create-report', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (!res.ok) {
          const contentType = res.headers.get('content-type');
          if (contentType && contentType.includes('application/json')) {
            const err = await res.json();
            alert('Error: ' + (err.message || 'Error desconocido'));
          } else {
            const errorText = await res.text();
            console.error('Server returned HTML instead of JSON:', errorText);
            alert('Error del servidor: ' + res.status + ' ' + res.statusText);
          }
          return;
        }

        const result = await res.json();
        alert('Queja creada con éxito');
        if (result.redirect) {
          window.location.href = result.redirect;
        } else {
          window.location.href = '/dashboard';
        }
      } catch (error) {
        console.error(error);
        alert('Error al enviar la queja');
      }
    });
  </script>
</body>
</html>